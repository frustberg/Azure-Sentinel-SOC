{
  "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "triggers": {
    "When_Sentinel_Alert_Triggered": {
      "type": "Request",
      "kind": "Http",
      "inputs": {}
    }
  },
  "actions": {
    "Send_Email": {
      "type": "ApiConnection",
      "inputs": {
        "host": {
          "connection": {
            "name": "@parameters('$connections')['office365']['connectionId']"
          }
        },
        "method": "post",
        "path": "/v2/Mail",
        "body": {
          "Message": {
            "Subject": "Azure Sentinel alert triggered",
            "Body": "An incident has been generated by Azure Sentinel. Please investigate.",
            "To": [
              "soc-team@example.com"
            ]
          }
        }
      },
      "runAfter": {}
    }
  }
}
